<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>space.arim</groupId>
	<artifactId>bans</artifactId>
	<version>0.5.9-SNAPSHOT</version>
	<!-- Remember to update versions: 
		1. Update property core.version
		2. Update versions in all child modules
	-->
	<packaging>pom</packaging>

	<name>ArimBans</name>
	<description>ArimBans is the ultimate punitive solution for Spigot servers and BungeeCord networks, seeking to maximise efficiency through near-total asynchronous operation.</description>
	<url>https://github.com/A248/ArimBans</url>
	<inceptionYear>2019</inceptionYear>
	
	<properties>
    	<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    	<maven.compiler.source>1.8</maven.compiler.source>
    	<maven.compiler.target>1.8</maven.compiler.target>
    	<arimapi.version>0.2.0-SNAPSHOT</arimapi.version>
    	<core.version>0.5.9</core.version>
    	<universal.version>0.6.5-SNAPSHOT</universal.version>
    	<spigot.version>1.15-R0.1-SNAPSHOT</spigot.version>
    	<bungeecord.version>1.15-SNAPSHOT</bungeecord.version>
    	<slf4j.version>1.7.9</slf4j.version>
    	<bstats.version>1.5</bstats.version>
		<protocolize.version>1.5.2-SNAPSHOT</protocolize.version>
	</properties>

	<licenses>
		<license>
			<name>GNU General Public License, Version 3</name>
			<url>https://www.gnu.org/licenses/</url>
			<distribution>repo</distribution>
			<comments>Strong copyleft license, commonly known as the GNU GPL v3</comments>
		</license>
	</licenses>
	
	<developers>
		<developer>
			<id>anandbeh</id>
			<name>Anand Beh</name>
			<url>https://www.arim.space</url>
			<roles>
				<role>creator</role>
				<role>developer</role>
			</roles>
			<timezone>America/New_York</timezone>
		</developer>
	</developers>
	
	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-compiler-plugin</artifactId>
					<version>3.8.0</version>
					<configuration>
						<source>1.8</source>
						<target>1.8</target>
					</configuration>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-shade-plugin</artifactId>
					<version>3.2.1</version>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>

	<modules>
		<module>ArimBansLib</module>
		<module>ArimBansResources</module>
		<module>ArimBans3</module>
		<module>ArimBansExtended</module>
		<module>ArimBansSkript</module>
	</modules>
	
	<distributionManagement>
		<repository>
			<id>arim-repo</id>
			<url>https://www.arim.space/repo/repository/maven-releases/</url>
		</repository>
		<snapshotRepository>
			<id>arim-repo</id>
			<url>https://www.arim.space/repo/repository/maven-snapshots/</url>
		</snapshotRepository>
	</distributionManagement>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>space.arim</groupId>
				<artifactId>arimapi-core</artifactId>
				<version>${arimapi.version}</version>
			</dependency>
			<dependency>
				<groupId>space.arim</groupId>
				<artifactId>arimapi-framework</artifactId>
				<version>${arimapi.version}</version>
			</dependency>
			<dependency>
				<groupId>space.arim</groupId>
				<artifactId>universal-registry</artifactId>
				<version>${universal.version}</version>
			</dependency>
			<dependency>
				<groupId>space.arim</groupId>
				<artifactId>universal-gpl</artifactId>
				<version>${universal.version}</version>
				<classifier>resources</classifier>
				<type>zip</type>
				<scope>provided</scope>
			</dependency>
			<dependency>
				<groupId>space.arim</groupId>
				<artifactId>bans-api</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>space.arim</groupId>
				<artifactId>bans-core</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>space.arim</groupId>
				<artifactId>bans-resources</artifactId>
				<version>${project.version}</version>
				<classifier>resources</classifier>
				<type>zip</type>
				<scope>provided</scope>
			</dependency>
			<dependency>
				<groupId>org.spigotmc</groupId>
				<artifactId>spigot-api</artifactId>
				<version>${spigot.version}</version>
				<scope>provided</scope>
			</dependency>
			<dependency>
				<groupId>net.md-5</groupId>
				<artifactId>bungeecord-api</artifactId>
				<version>${bungeecord.version}</version>
				<scope>provided</scope>
			</dependency>
			<dependency>
				<groupId>org.slf4j</groupId>
				<artifactId>slf4j-api</artifactId>
				<version>${slf4j.version}</version>
			</dependency>
			<dependency>
				<groupId>org.slf4j</groupId>
				<artifactId>slf4j-nop</artifactId>
				<version>${slf4j.version}</version>
			</dependency>
			<dependency>
				<groupId>org.bstats</groupId>
				<artifactId>bstats-bukkit</artifactId>
				<version>${bstats.version}</version>
			</dependency>
			<dependency>
				<groupId>org.bstats</groupId>
				<artifactId>bstats-bungeecord</artifactId>
				<version>${bstats.version}</version>
			</dependency>
			<dependency>
				<groupId>de.exceptionflug</groupId>
				<artifactId>protocolize-api</artifactId>
				<version>${protocolize.version}</version>
			</dependency>
			<dependency>
				<groupId>de.exceptionflug</groupId>
				<artifactId>protocolize-world</artifactId>
				<version>${protocolize.version}</version>
			</dependency>
		</dependencies>
	</dependencyManagement>
	
	<repositories>
		<repository>
			<id>arim-repo</id>
			<url>https://www.arim.space/repo/repository/maven-snapshots/</url>
		</repository>
		<repository>
			<id>spigot-repo</id>
			<url>https://hub.spigotmc.org/nexus/content/repositories/snapshots/</url>
		</repository>
		<repository>
       		<id>bungeecord-repo</id>
			<url>https://oss.sonatype.org/content/repositories/snapshots</url>
   		</repository>
	</repositories>
</project>
