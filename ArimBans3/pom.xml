<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
    	<groupId>space.arim</groupId>
		<artifactId>bans</artifactId>
		<version>0.5.6-SNAPSHOT</version>
	</parent>

	<artifactId>bans-core</artifactId>
	<name>ArimBans3</name>
	<description>The central ArimBans3 core including a shaded UniversalRegistry</description>

	<build>
		<sourceDirectory>src/main/java</sourceDirectory>
		<finalName>${project.name}_v${project.version}</finalName>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-shade-plugin</artifactId>
				<version>3.2.1</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>shade</goal>
						</goals>
						<configuration>
							<artifactSet>
								<includes>
									<include>space.arim:registry</include>
									<include>org.hsqldb:hsqldb</include>
									<include>com.zaxxer:HikariCP</include>
									<include>org.slf4j:slf4j-api</include>
									<include>org.slf4j:slf4j-simple</include>
									<include>org.bstats:bstats-bukkit</include>
									<include>org.bstats:bstats-bungeecord</include>
								</includes>
							</artifactSet>
							<minimizeJar>true</minimizeJar>
							<filters>
								<filter>
									<artifact>org.hsqldb:hsqldb</artifact>
									<includes>
							<!-- Yes, it is a LOT of files to list in pom. -->
							<!-- You probably wondering why they're all here, if minimizeJar=true. -->
							<!-- It's because minimizeJar is not so smart -->
							<!-- Specifically, it removes files which are indirectly required -->
							<!-- E.g., it does not care for Class.forName(String) -->
							<!-- Consequently, minimizeJar was removing hsqldb dependency -->
							<!-- I could have just force-included all of hsqldb -->
							<!-- But that would make the uber JAR unnecessarily large. -->
							<!-- So, quite simply, I found the specific classes I needed and listed them here. -->
										<include>org/hsqldb/DatabaseManager.java</include>
										<include>org/hsqldb/TransactionManager.java</include>
										<include>org/hsqldb/RowDiskDataChange.java</include>
										<include>org/hsqldb/ColumnSchema.java</include>
										<include>org/hsqldb/PeriodDefinition.java</include>
										<include>org/hsqldb/RowAVLDiskLarge.java</include>
										<include>org/hsqldb/StatementSession.java</include>
										<include>org/hsqldb/TableWorks.java</include>
										<include>org/hsqldb/TransactionManagerCommon.java</include>
										<include>org/hsqldb/RoutineSchema.java</include>
										<include>org/hsqldb/Tokens.java</include>
										<include>org/hsqldb/StatementQuery.java</include>
										<include>org/hsqldb/StatementResultUpdate.java</include>
										<include>org/hsqldb/SchemaManager.java</include>
										<include>org/hsqldb/StatementSchemaDefinition.java</include>
										<include>org/hsqldb/ClientConnection.java</include>
										<include>org/hsqldb/ClientConnectionHTTP.java</include>
										<include>org/hsqldb/StatementDML.java</include>
										<include>org/hsqldb/Statement.java</include>
										<include>org/hsqldb/ParserCommand.java</include>
										<include>org/hsqldb/StatementProcedure.java</include>
										<include>org/hsqldb/RangeVariable.java</include>
										<include>org/hsqldb/ParserDQL.java</include>
										<include>org/hsqldb/TypeInvariants.java</include>
										<include>org/hsqldb/ExpressionPeriodOp.java</include>
										<include>org/hsqldb/Scanner.java</include>
										<include>org/hsqldb/ExpressionOp.java</include>
										<include>org/hsqldb/HsqlDateTime.java</include>
										<include>org/hsqldb/StatementCompound.java</include>
										<include>org/hsqldb/StatementDMQL.java</include>
										<include>org/hsqldb/DatabaseURL.java</include>
										<include>org/hsqldb/TriggerDefSQL.java</include>
										<include>org/hsqldb/ParserDML.java</include>
										<include>org/hsqldb/Schema.java</include>
										<include>org/hsqldb/SchemaObject.java</include>
										<include>org/hsqldb/RowAVLDiskData.java</include>
										<include>org/hsqldb/ReferenceObject.java</include>
										<include>org/hsqldb/ExpressionLike.java</include>
										<include>org/hsqldb/StatementSignal.java</include>
										<include>org/hsqldb/ExpressionTable.java</include>
										<include>org/hsqldb/TransactionManager2PL.java</include>
										<include>org/hsqldb/Row.java</include>
										<include>org/hsqldb/StatementCursor.java</include>
										<include>org/hsqldb/Table.java</include>
										<include>org/hsqldb/Database.java</include>
										<include>org/hsqldb/SetFunctionValueArray.java</include>
										<include>org/hsqldb/StatementSimple.java</include>
										<include>org/hsqldb/SqlInvariants.java</include>
										<include>org/hsqldb/TransactionManagerMVCC.java</include>
										<include>org/hsqldb/ExpressionOrderBy.java</include>
										<include>org/hsqldb/StatementSet.java</include>
										<include>org/hsqldb/RowAVL.java</include>
										<include>org/hsqldb/RowAVLDisk.java</include>
										<include>org/hsqldb/OpTypes.java</include>
										<include>org/hsqldb/SetFunctionValueAggregate.java</include>
										<include>org/hsqldb/TablePeriodWorks.java</include>
										<include>org/hsqldb/Expression.java</include>
										<include>org/hsqldb/TriggerDef.java</include>
										<include>org/hsqldb/ParserTable.java</include>
										<include>org/hsqldb/SessionInterface.java</include>
										<include>org/hsqldb/RowActionBase.java</include>
										<include>org/hsqldb/RowAction.java</include>
										<include>org/hsqldb/RangeGroup.java</include>
										<include>org/hsqldb/Like.java</include>
										<include>org/hsqldb/ParserBase.java</include>
										<include>org/hsqldb/ExpressionLogical.java</include>
										<include>org/hsqldb/ParserRoutine.java</include>
										<include>org/hsqldb/NumberSequence.java</include>
										<include>org/hsqldb/DatabaseType.java</include>
										<include>org/hsqldb/RangeVariableJoined.java</include>
										<include>org/hsqldb/ExpressionColumn.java</include>
										<include>org/hsqldb/ConstraintCore.java</include>
										<include>org/hsqldb/View.java</include>
										<include>org/hsqldb/SetFunction.java</include>
										<include>org/hsqldb/ExpressionAccessor.java</include>
										<include>org/hsqldb/SetFunctionValueUser.java</include>
										<include>org/hsqldb/SortAndSlice.java</include>
										<include>org/hsqldb/StatementInsert.java</include>
										<include>org/hsqldb/StatementCommand.java</include>
										<include>org/hsqldb/SessionManager.java</include>
										<include>org/hsqldb/Constraint.java</include>
										<include>org/hsqldb/QuerySpecification.java</include>
										<include>org/hsqldb/TransactionManagerMV2PL.java</include>
										<include>org/hsqldb/HsqlException.java</include>
										<include>org/hsqldb/FunctionSQL.java</include>
										<include>org/hsqldb/ExpressionAggregate.java</include>
										<include>org/hsqldb/TableUtil.java</include>
										<include>org/hsqldb/TableDerived.java</include>
										<include>org/hsqldb/HsqlNameManager.java</include>
										<include>org/hsqldb/SessionData.java</include>
										<include>org/hsqldb/Token.java</include>
										<include>org/hsqldb/ExpressionValue.java</include>
										<include>org/hsqldb/FunctionCustom.java</include>
										<include>org/hsqldb/FunctionSQLInvoked.java</include>
										<include>org/hsqldb/SchemaObjectSet.java</include>
										<include>org/hsqldb/Routine.java</include>
										<include>org/hsqldb/ExpressionPeriod.java</include>
										<include>org/hsqldb/SessionContext.java</include>
										<include>org/hsqldb/StatementExpression.java</include>
										<include>org/hsqldb/ParserDDL.java</include>
										<include>org/hsqldb/Session.java</include>
										<include>org/hsqldb/TableBase.java</include>
										<include>org/hsqldb/ExpressionColumnAccessor.java</include>
										<include>org/hsqldb/RangeVariableResolver.java</include>
										<include>org/hsqldb/ExpressionArrayAggregate.java</include>
										<include>org/hsqldb/StatementManager.java</include>
										<include>org/hsqldb/StatementSchema.java</include>
										<include>org/hsqldb/TextTable.java</include>
										<include>org/hsqldb/StatementHandler.java</include>
										<include>org/hsqldb/QueryExpression.java</include>
										<include>org/hsqldb/ExpressionArithmetic.java</include>
										<include>org/hsqldb/ColumnBase.java</include>
									</includes>
								</filter>
							</filters>
							<createDependencyReducedPom>true</createDependencyReducedPom>
							<relocations>
								<relocation>
									<pattern>org.bstats.bukkit</pattern>
									<shadedPattern>space.arim.bans.env.bukkit.metrics</shadedPattern>
								</relocation>
								<relocation>
									<pattern>org.bstats.bungeecord</pattern>
									<shadedPattern>space.arim.bans.env.bungee.metrics</shadedPattern>
								</relocation>
							</relocations>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>org.hsqldb</groupId>
			<artifactId>hsqldb</artifactId>
			<version>2.5.0</version>
		</dependency>
		<dependency>
			<groupId>com.zaxxer</groupId>
			<artifactId>HikariCP</artifactId>
			<version>3.4.1</version>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-simple</artifactId>
			<version>1.6.4</version>
		</dependency>
		<dependency>
			<groupId>org.bstats</groupId>
			<artifactId>bstats-bukkit</artifactId>
			<version>1.5</version>
		</dependency>
		<dependency>
			<groupId>org.bstats</groupId>
			<artifactId>bstats-bungeecord</artifactId>
			<version>1.5</version>
		</dependency>
	</dependencies>
	<repositories>
		<repository>
			<id>CodeMC</id>
			<url>https://repo.codemc.org/repository/maven-public</url>
		</repository>
	</repositories>
</project>