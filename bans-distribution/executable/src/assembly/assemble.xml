<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.1.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.1.0 http://maven.apache.org/xsd/assembly-2.1.0.xsd">
    <id>plugin</id>
    <formats>
        <format>jar</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <includes />
            <directory>src/main/resources</directory>
            <outputDirectory>/</outputDirectory>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <outputDirectory>/</outputDirectory>
            <useProjectArtifact>true</useProjectArtifact>
            <unpack>true</unpack>
            <useStrictFiltering>true</useStrictFiltering>
            <includes>
                <include>space.arim.libertybans:bans-api</include>
                <include>space.arim.omnibus:omnibus</include>
                <include>space.arim.libertybans:bans-bootstrap</include>
                <include>space.arim.libertybans:bans-env-velocityplugin</include>
                <include>space.arim.libertybans:bans-env-spigotplugin</include>
                <include>space.arim.libertybans:bans-env-bungeeplugin</include>
                <include>space.arim.licenser:licenser-agpl3</include>
            </includes>
            <unpackOptions>
                <excludes>
                    <exclude>module-info.class</exclude>
                </excludes>
            </unpackOptions>
        </dependencySet>
        <dependencySet>
            <outputDirectory>/jars/</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
            <unpack>false</unpack>
            <useStrictFiltering>true</useStrictFiltering>
            <excludes>
                <exclude>space.arim.libertybans:bans-api</exclude>
                <exclude>space.arim.omnibus:omnibus</exclude>
                <exclude>space.arim.libertybans:bans-bootstrap</exclude>
                <exclude>space.arim.libertybans:bans-env-velocityplugin</exclude>
                <exclude>space.arim.libertybans:bans-env-spigotplugin</exclude>
                <exclude>space.arim.libertybans:bans-env-bungeeplugin</exclude>
                <exclude>space.arim.licenser:licenser-agpl3</exclude>

                <exclude>org.slf4j:slf4j-api</exclude>
                <exclude>org.yaml:snakeyaml</exclude>
                <exclude>com.google.code.gson:gson</exclude>
                <exclude>org.checkerframework:checker-qual</exclude>
                <exclude>com.google.errorprone:error_prone_annotations</exclude>
                <exclude>net.kyori:*</exclude>
                <exclude>org.jetbrains:annotations</exclude>
            </excludes>
        </dependencySet>
    </dependencySets>
</assembly>